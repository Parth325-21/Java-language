import java.util.*;
public class Main {
    public static void main(String[] args) {
        double a,b,c,sum,aveg;
        System.out.println("enter the value of a,b,c");
        Scanner sc = new Scanner (System.in);
        a = sc.nextDouble();
        b = sc.nextDouble();
        c = sc.nextDouble();
        sum = (a+b+c);
        aveg = (a+b+c)/3;
        System.out.println("sum is given by"+sum + "average"+aveg);

    }

}
